@namespace BlazorComponent
@typeparam TItem
@typeparam TDataTable
@inherits ComponentPartBase<TDataTable>

<BDataTableRowGroup Value="IsExpanded" @attributes="GetAttributes(typeof(BDataTableRowGroup))">
    <RowHeaderContent>
        @RenderPart(typeof(BDataTableDefaultSimpleRow<,>),Index,Item)
    </RowHeaderContent>
    <RowContentContent>
        <tr class="@CssProvider.GetClass("expanded-content")">
            @ExpandedItemContent(Props)
        </tr>
    </RowContentContent>
</BDataTableRowGroup>

